<odoo>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header>
                    <button name="sold_action" string="Sold" class="oe_highlight" type="object" attrs="{'invisible':[('sold_status','=', 'sold')]}"/>
                    <button name="sold_action_cancel" string="Cancel" class="oe_highlight" type="object" attrs="{'invisible':[('sold_status','=', 'sold')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold"/>
                </header>
                <sheet>
                    <div class="container">
                        <div class="row my-2">
                            <div class="oe_title oe_inline">
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                        </div>
                        <div class="row my-2">
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                        <div class="row my-5">
                            <div class="col-sm">
                                <group>
                                    <field name="sold_status" string="Sold Status"/>
                                    <field name="property_type_id" string="Property Type" options="{'no_create': True}"/>
                                    <field name="postcode" string="Postcode"/>
                                    <field name="date_availability" string="Available From"/>
                                    <field name="city" string="City"/>
                                </group>
                            </div>
                            <div class="col-sm">
                                <group>
                                    <field name="active" string="Available"/>
                                    <field name="expected_price" string="Expected Price"/>
                                    <field name="selling_price" string="Selling Price"/>
                                    <field name="best_price" string="Best Price"/>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                </group>
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="Description">
                            <div class="container">
                                <div class="row my-2">
                                    <div class="col-sm">
                                        <group>
                                            <field name="description" string="Description"/>
                                            <field name="living_area" string="Living Area"/>
                                            <field name="bedrooms" string="Bedrooms"/>
                                            <field name="facades" string="Facades"/>
                                            <field name="garage" string="Garage"/>
                                            <field name="garden" string="Garden"/>
                                            <field name="garden_area" string="Garden Area(sqm)" attrs="{'invisible':[('garden','=', False)]}"/>
                                            <field name="garden_orientation" string="Garden Orientation" attrs="{'invisible':[('garden','=', False)]}"/>
                                            <field name="total_area" string="Total Area(sqm)"/>
                                        </group>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page string="Offers">
                            <div class="container">
                                <div class="row my-2">
                                    <div class="col-sm">
                                        <field name="offer_ids" string="Offers" attrs="{'readonly': ['|',('state','=', 'offer accepted'),('state','=', 'sold')]}"/>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <page string="Other info">
                            <div class="container">
                                <div class="row my-2">
                                    <div class="col-sm">
                                        <group>
                                            <field name="user_id" string="Salesman"/>
                                            <field name="partner_id" string="Buyer"/>
                                        </group>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>